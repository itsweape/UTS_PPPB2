<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/singleTrack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/trackImg"
            android:layout_marginHorizontal="30dp"
            android:layout_marginBottom="40dp"
            android:text="@string/nameTrack"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"
            android:layout_toEndOf="@+id/trackImg"
            android:layout_toRightOf="@+id/trackImg"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"/>

        <ImageView
            android:id="@+id/trackImg"
            android:layout_width="160dp"
            android:layout_height="120dp"
            app:srcCompat="@drawable/run" />

    </RelativeLayout>

</LinearLayout>